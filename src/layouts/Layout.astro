---
interface Props{
	title:string,
	description:string
}

const {description,title} = Astro.props
---


<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
			rel="stylesheet"
		/>

		<title>{title}</title>
	</head>

	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: "Inter", sans-serif;
		min-height: 100vh;
	}
	body::after {
		content: "";
		position: absolute;
		inset: 0;
		z-index: -10;
		height: 100%;
		width: 100%;
		/* background: radial-gradient(
				100% 125% at 50% 0%,
				#12192b41 0%,
				#1e2a477e 55%,
				#30496b 100%
			)
			#000;  */
			background: radial-gradient(100% 100% at 50% 0%, rgba(18, 25, 43, 0.4) 0%, rgba(30, 42, 71, 0.7) 55%, #30496B 100%), #000000;
			background-blend-mode: lighten, normal;
	}
</style>
