---
import ImageGallery from "./ImageGallery.jsx";
import Button from "./button.astro";

const { title, description, technologies, images, repository } = Astro.props;
---

<div class="project-card">
  <ImageGallery client:load images={images} />
  <div class="info">
    <h3 class="title">{title}</h3>
    <p class="description">{description}</p>
    <div class="technologies">
      {technologies.map((tech: string) => <span class="tech-tag">{tech}</span>)}
    </div>
    <div class="buttons">
      <Button
        text="GitHub"
        href={repository}
        icon="https://cdn-icons-png.flaticon.com/512/25/25231.png"
        type="primary"
      />
    </div>
  </div>
</div>

<style "global":true>
  .project-card {
    display: flex;
    width: 55rem;
    gap: 0.5rem;
    margin-bottom: 2rem;
    background-color: #12192B;
    border-radius: 16px;
    box-shadow: 0px 0px 5px #9bb6d4;
    overflow: hidden;
    border: 2px solid #1E2A47;
  }

  /* .image-gallery-container {
  display: flex;
