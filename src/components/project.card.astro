  .image-gallery {
    position: relative;
    flex: 1;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  /* .image-gallery img {
    width: 24rem;
    height: auto;
    border-radius: 4px;
    object-fit: cover;
  } */

  .info {
    flex: 2;
    padding: 1.5rem;
  }

  .title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
    color: #fff;
  }

  .description {
    font-size: 1rem;
    margin-bottom: 1rem;
    color: #e6f1ff;
    text-wrap: pretty;
  }

  .technologies {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag {
    background-color: #e3e3e3;
    padding: 0.4rem 0.8rem;
    border-radius: 10px;
    font-size: 0.9rem;
    color: #555;
    font-weight: bold;
    text-transform: uppercase;
  }

  .buttons {
    margin-top: 10px;
  }
</style>
