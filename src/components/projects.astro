  }

  .proyectos-title {
    margin-top: 2rem;
    text-align: center;
    font-size: 3rem;
    margin-bottom: 2.5rem;
    color: #fff;
  }

  .proyectos-description {
    margin: 1.25rem;
    margin-bottom: 3rem;
    max-width: 50%;
    margin-left: auto;
    margin-right: auto;
    text-align: center;
    font-size: 2rem;
    padding: 2rem;
    margin-bottom: 2rem;
    color: #9bb7d4;
    font-size: 1.25rem;
    text-align: center;
    text-wrap: pretty;
  }
  .project-list {
    display: flex;
